class Rectangle:
    length = 1
    width = 1
    def set_data(self, length, width):
           if (length or width) < 0:
               self.length = length = 0
               self.width = width = 0
               print("Значення від'ємні!!!")
           elif (length or width) > 20:
               self.length = length = 0
               self.width = width = 0
               print("Значення завеликі!!!")
           else:
               self.length = length
               self.width = width

    def get_data(self):
        print("Довжина: ", float(self.length),"Ширина: ", float(self.width))
    def perimeter(self):
        print("Периметр: ", float(2 * self.length + 2 * self.width))
    def square(self):
        print("Площа: ", float(self.length * self.width))

one = Rectangle()
one.set_data(-2, 1)
one.get_data()
one.perimeter()
one.square()

two = Rectangle()
two.set_data(14.7, 3)
two.get_data()
two.perimeter()
two.square()
